# .env.template - Copy to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# REQUIRED - Claude Code will not work without these
# ============================================

# Anthropic API key (get from console.anthropic.com)
ANTHROPIC_API_KEY=your-anthropic-key-here

# ============================================
# OPTIONAL - Multi-model review panel
# ============================================

# Google AI API key (for @gemini-overseer)
GEMINI_API_KEY=
{% if include_multi_model_overseer %}

# OpenAI API key (for @openai-overseer)
OPENAI_API_KEY=
{% endif %}
{% if include_grok_agent %}

# xAI API key (for Grok devil's advocate)
XAI_API_KEY=
{% endif %}

# ============================================
# INFRASTRUCTURE - Project-specific endpoints
# ============================================
{% if has_local_llm %}

# Ollama endpoint (local LLM)
OLLAMA_ENDPOINT="{{ ollama_endpoint }}"

# Primary coding model
PRIMARY_CODING_MODEL="{{ primary_coding_model }}"
{% endif %}
{% if has_knowledge_graph %}

# Memgraph database
MEMGRAPH_HOST="{{ memgraph_host }}"
MEMGRAPH_PORT="{{ memgraph_port }}"
{% endif %}
{% if has_guardrails_proxy %}

# Guardrails proxy
GUARDRAILS_ENDPOINT="{{ guardrails_endpoint }}"
{% endif %}

# ============================================
# PROJECT - Identifiers
# ============================================

PROJECT_NAME="{{ project_name }}"
PROJECT_ROOT=${PWD}
